<Window x:Class="Shutdown.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shutdown"
        mc:Ignorable="d"
        Title="Shutdown" Height="280" Width="268" WindowStartupLocation="CenterScreen" Icon="Resources\mainIcon.ico">
    <Grid>
        <Button x:Name="btnAccept" Content="Подтвердить" Margin="82,99,89.6,0" VerticalAlignment="Top" Height="28" Click="btnAccept_Click"/>
        <TextBox x:Name="textBox" Height="23" TextAlignment="Center" MaxLength="4" Margin="29,63,29.6,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" FontWeight="Bold" />
        <TextBlock x:Name="textBlockInfo" TextWrapping="Wrap" VerticalAlignment="Top" Margin="29,27,29.6,0" Height="31"><Run Text="Через сколько мин. выключить комп. "/></TextBlock>
        <TextBlock x:Name="textBlockTime" TextWrapping="Wrap" Text="Осталось : 00:00:00" TextAlignment="Center" Margin="29,146,29.6,77.4"/>
        <Button x:Name="btnCancel" Content="Отменить" Margin="82,178,89.6,0" Height="28" Click="btnCancel_Click" VerticalAlignment="Top"/>
    </Grid>
</Window>
